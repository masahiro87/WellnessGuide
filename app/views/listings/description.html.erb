<%= render 'partial/navbar' %>
<div class="container">
    <div class="col-md-3">
        <!-- vertical-navbar -->
        <%= render 'partial/verticalnavbar'%>
    </div>
    <div class="col-md-9">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="text-center">
                    <span style="font-size:24px;">プログラムの編集</span>
                </div>
            </div>

            <div class="panel-body">

                <%= form_for @listing do |f| %>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>タイトル</label>
                                <%= f.text_field :title, placeholder: "プログラムタイトルを記載しましょう", class: "form-control" %>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>プログラムの内容</label>
                                <%= f.text_area :summary, rows: 8, placeholder: "プログラムの内容について記述してください", class: "form-control" %>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>対応言語</label>
                                <%= f.text_field :language, placeholder: "対応言語を記入してください　例：日本語／英語", class: "form-control" %>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>タイムスケジュール</label>
                                <%= f.text_area :time_schedule, rows: 8, placeholder: "タイムスケジュールを簡潔に記述してください", class: "form-control" %>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>プログラム提供場所</label>
                                <%= f.text_field :meeting_place, placeholder: "プログラム提供場所を記載してください", class: "form-control" %>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>定員</label>
                                <%= f.text_field :capacity, placeholder: "定員を記載してください（半角英数）", class: "form-control" %>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>含まれるもの</label>
                                <%= f.text_area :price_include, rows: 8, placeholder: "料金に含まれるサービスを記述してください", class: "form-control" %>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>持ち物</label>
                                <%= f.text_area :to_bring, rows: 5, placeholder: "当日の持ち物を列挙してください。", class: "form-control" %>
                            </div>
                        </div>
                    </div>

                    <div class="actions">
                        <%= f.submit "更新", class: "btn btn-danger" %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
