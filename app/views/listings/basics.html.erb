<!-- 基本情報編集ページ -->
<%= render 'partial/navbar' %>
<div class="container">
    <div class="col-md-3">
        <!-- vertical-navbar -->
        <%= render 'partial/verticalnavbar'%>
    </div>
    <div class="col-md-9">
        <div class="panel panel-default">
          <div class="panel-heading">
              <div class="text-center">
                  <span style="font-size:24px;">基本情報の編集</span>
              </div>
          </div>

          <div class="panel-body">
              <%= form_for @listing do |f| %>
                  <div class="row">
                      <div class="col-md-12 select">
                          <div class="form-group">
                              <label>カテゴリー</label>
                              <%= f.select :category, [["フィジカル","フィジカル"], ["メンタル","メンタル"], ["ビューティ","ビューティ"], ["フード","フード"]], {prompt:"選択してください"}, {required: 'true', autofocus: 'true', class: 'form-control'} %>
                          </div>
                      </div>
                  </div>
                  <br>

                  <div class="row">
                      <div class="col-md-12 select">
                          <div class="form-group">
                            <label>所要時間</label>
                            <%= f.select :program_time, [["２時間以内","２時間以内"],["２時間以上","２時間以上"],["数日間","数日間"]], {prompt:"選択してください"}, {required: 'true', autofocus: 'true', class: 'form-control'} %>
                          </div>
                      </div>
                  </div>
                  <br>

                  <div class="row">
      							<div class="col-md-12 select">
      								<div class="form-group">
      									<label>レベル</label>
      									<%= f.select :program_level, [["上級","上級"],["中級","中級"],["初級","初級"]], {prompt:"選択してください"}, {required: 'true', autofocus: 'true', class: 'form-control'} %>
      								</div>
      							</div>
      						</div>
      						<br>

      						<div class="row">
      							<div class="col-md-12 select">
      								<div class="form-group">
      									<label>ロケーション</label>
      									<%= f.select :location, [["屋内","屋内"],["屋外","屋外"]], {prompt:"選択してください"}, {required: 'true', autofocus: 'true', class: 'form-control'} %>
      								</div>
      							</div>
      						</div>
      						<br>

                  <div class="actions">
                      <%= f.submit "更新", class: "btn btn-danger" %>
                  </div>
              <% end %>
          </div>
      </div>
  </div>
</div>
